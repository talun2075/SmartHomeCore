@{
    
    var b = ViewBag.Buttons;
}
    <link rel="stylesheet" href="/css/buttonview.css" media="all" />
    <div id="BodyDIV">
        @for (int i = 0; i < b.Count; i++)
        {

            var cssClass = "";
            int bat = @b[i].Batterie;
            Boolean akt = @b[i].Aktiv;
            Boolean vis = @b[i].Visible;
            if (!akt || !vis) continue;

            if (bat <= 50)
                cssClass = "yellow";
            if (bat <= 25)
                cssClass = "red";
            if (bat == -1)
                cssClass = "";

            <div class="button_ring">
                <div class="button">
                    <div class="button_Inner">
                        <div class="name"><b>@b[i].Name</b></div>
                        <div class="@cssClass">Batterie: @b[i].Batterie</div>
                        <div>Mac: @b[i].Mac</div>
                        <div>Wann:<span class="smallFont">@b[i].LastClick</span></div>
                        <div>Was: @b[i].LastAction</div>
                        <div class="ip">IP: @b[i].IP</div>
                    </div>
                </div>
            </div>
        }
</div>